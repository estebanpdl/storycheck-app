<!-- status by profile -->
<div id='cover'>
  <h2>{{obj.personaje}}</h2>
  <img src='http://www.bagre.pa.gov.br/wp-content/uploads/2016/07/user-silhueta-masculina_318-55563-300x300.jpg' alt='' class='img-circle profile-img'>
</div>

<!-- pill tabs content -->
<div class='container'>
  <div class='row'>
    <div class='col-md-3 col-sm-3 col-xs-12'>
      <ul class='nav nav-pills nav-stacked'>
        <li class='active'>
          <a class='pill-all-content' href='#all-status-content' data-toggle='tab'>
            <h4>
              Contenido
            </h4>
          </a>
        </li>
        <li>
          <a href='#falsa-content' data-toggle='tab'>
            <img class='img-responsive value-icon' src='/img/falsa.png'>
          </a>
        </li>
        <li>
          <a href='#enganosa-content' data-toggle='tab'>
            <img class='img-responsive value-icon' src='/img/engañosa.png'>
          </a>
        </li>
        <li>
          <a href='#inflada-content' data-toggle='tab'>
